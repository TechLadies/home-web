<table class="table">




<thead>

 <th>Name</th>
 <th>Email</th>
 <th>Contact number</th>
 <th>Roles</th>
 </thead>


<tbody>
<% @users.each do |user| %>
<td><%= user.name %> </td>
<td><%= user.email %> </td>
