<div class='page-header'>
  <div class="container">
    <h1 class='pull-left'>Tag Management</h1>
    <div class='pull-right'>
      <%= link_to 'New Tag', new_admin_tag_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>


<div class='container'>
  <div class='panel panel-default'>
    <ul class='list-group'>
      <%- Tag.traverse do |tag, level| %>
        <li class='list-group-item list-group-item-<%= level %>'>
          <%= tag.name %>
          <%= link_to 'Edit', edit_admin_tag_path(tag), class: 'pull-right' %>
        </li>
      <%- end %>
    </ul>
  </div>
</div>
