<div class='page-header'>
  <div class='container'>
    <div class="row">
      <div class="col-md-6">
        <h1> <%= current_user.name %> </h1>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Profile</h3>
      <%= link_to 'Edit', edit_my_account_path, class: 'btn btn-primary' %>      
    </div>
    <div class="panel-body">      
      <div class="table-responsive">
        <table class="table">
          <thead>
            <th>Name</th>
            <th>Email</th>
            <th>Contact number</th>
            <th>Status</th>
          </thead>
          <tbody>
            <td><%= current_user.name%></td>
            <td><%= current_user.email%> </td>
            <td><%= current_user.contact_number%></td>
            <td><%= current_user.status%></td>
            </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Assigned Cases</h3>
    </div>

    <div class='panel-body'>
      <div>
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#pending" aria-controls="pending" role="tab" data-toggle="tab">
              <strong><%= @cases.where(status: "Pending").count %></strong> Pending
            </a>
          </li>
          <li role="presentation">
            <a href="#closed" aria-controls="closed" role="tab" data-toggle="tab">
              <strong><%= @cases.where(status: "Closed").count %></strong> Closed
            </a>
          </li>
        </ul>
          
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="pending">

            <table class='table table-responsive table-striped'>
              <thead>
                <tr>
                  <th>Case Number</th>
                  <th>Case Type</th>
                  <th>Assigned To</th>
                </tr>
              </thead>

              <tbody>
                <% @cases.where(status: "Pending").order('id DESC').each do |c| %>
                  <tr>
                    <td><%= link_to c.id, case_path(c) %> </td>
                    <td><%= c.case_type %> </td>
                    <td><%= c.user.name %></td>
                    <td><%= link_to 'Edit', edit_case_path(c) %></td>
                  </tr>
                <% end %>
              </tbody>            
            </table>

          </div>

          <div role="tabpanel" class="tab-pane" id="closed">

            <table class='table table-responsive table-striped'>
              <thead>
                <tr>
                  <th>Case Number</th>
                  <th>Case Type</th>
                  <th>Assigned To</th>
                </tr>
              </thead>

              <tbody>
                <% @cases.where(status: "Closed").order('id DESC').each do |c| %>
                  <tr>
                    <td><%= link_to c.id, case_path(c) %> </td>
                    <td><%= c.case_type %> </td>
                    <td><%= c.user.name %></td>
                    <td><%= link_to 'Edit', edit_case_path(c) %></td>
                  </tr>
                <% end %>
              </tbody>            
            </table>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>