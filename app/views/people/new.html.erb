<%= form_for :person, url: people_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :date_of_birth %><br>
    <%= f.date_field :date_of_birth %>
  </p>
 
  <p>
    <%= f.label :phone %><br>
    <%= f.text_area :phone %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>


  <p>
    <%= f.label :gender %><br>
    <%= f.text_area :gender %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>