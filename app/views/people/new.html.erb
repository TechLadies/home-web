
<div class='page-header'>
  <div class='container'>
    <h1>New Person</h1>
  </div>
</div>

<div class='container'>
  <div class='panel panel-default'>

    <div class='panel-heading'>
      <h2>Details</h2>
    </div>

    <div class='panel-body'>
      <div class='row'>
        <div class='col-xs-12'>

          <%= simple_form_for (@person) do |f| %>

            <%= f.input :name %>
            <%= f.input :date_of_birth %>
            <%= f.input :phone %>
            <%= f.input :email %>
            <%= f.input :address %>
            <%= f.input :gender %>

            <%= f.submit 'Submit', class: 'btn btn-primary' %>

          <%- end %>

        </div>
      </div>
    </div>

  </div>
</div>
