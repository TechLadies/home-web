
<div class='page-header'>
  <div class='container'>
    <h1>New Person</h1>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-xs-12'>

      <div class='container'>

  <%= simple_form_for (@people) do |f| %>

    <%= f.input :name%>
    <%= f.input :date_of_birth%>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :address%>
    <%= f.input :gender%>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <%- end %>

</div>
    </div>
  </div>
</div>
