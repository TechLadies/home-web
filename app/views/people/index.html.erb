<div class='page-header'>
  <div class='container'>
    <h1>People</h1>
  </div>
</div>

<div class='container'>
  <table class='table table-responsive'>

    <thead>
      <tr>
        <th>Name</th>
        <th>Contact number</th>
        <th>Email</th>
        <th>Address</th>
        <th>Date of birth</th>
        <th>Gender</th>
      </tr>
    </thead>

    <tbody>
      <%- @people.each do |person| %>
        <tr>
          <td><%= link_to person.name, person %> </td>
          <td><%= person.contact_number %></td>
          <td><%= person.email %> </td>
          <td><%= person.address %></td>
          <td><%= person.date_of_birth %></td>
          <td><%= person.gender %></td>
        </tr>
      <% end %>
    </tbody>
  
  </table>
</div>
