<legend><strong>Client Biodata</strong></legend>

<div class="row">
  <div class='col-md-6'>
    <%= ff.input :nationality, required: true do %>
      <div class='row'>
        <div class='col-xs-5'><%= select_tag :nationality_selector, options_for_select(['Philippines', 'Indonesia', 'Myanmar', 'Cambodia', 'India', 'Bangladesh', 'Sri Lanka', 'China', 'Others']), class: 'form-control' %></div>
        <div class='col-xs-7'><%= ff.input :nationality, wrapper: false, error: false, label: false, placeholder: 'For e.g Philippines' %></div>
      </div>
    <%- end %>
  </div>
  <%= ff.input :fin_number, label: 'FIN Number', wrapper_html: { class: "col-md-3" } %>
  <%= ff.input :wp_number, label: 'WP Number', wrapper_html: { class: "col-md-3" } %>
</div>

<div class="row">
  <%= ff.input :passport_number, wrapper_html: { class: "col-md-6" } %>
  <%= ff.input :pass_type, wrapper_html: { class: "col-md-6" } %>
</div>

<div class="row">
  <%= ff.input :date_of_arrival, label: 'Date of Arrival to Singapore', as: :string, input_html: { class: 'datepicker' }, wrapper_html: { class: "col-md-4" } %>
  <%= ff.input :start_of_employment, as: :string, input_html: { class: 'datepicker' }, wrapper_html: { class: "col-md-4" } %>
  <%= ff.input :days_off, label: 'Days off per month', wrapper_html: { class: "col-md-4" } %>
</div>

<div class="row">
  <%= ff.input :previous_employers_details, label: "Previous Employers' Details", wrapper_html: { class: "col-md-6" } %>
</div>
