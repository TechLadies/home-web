<div class='page-header'>
  <div class='container'>
    <h1>Create New Case</h1>
    <%= link_to 'Back to All Cases', cases_path, class: 'btn btn-default' %>
  </div>
</div>

<div class='container'>
  <div class='panel panel-default'>
    <div class='panel-body'>

      <div class='row'>
        <div class='col-md-6'>
          <%= simple_form_for @case, url: cases_path do |f| %>

            <%= f.input :case_type, label: 'Case Type', as: :radio_buttons, collection: CaseFile::TYPE %>

            <hr />
            <h3>People/Client Information</h3>

            <h3>Related Issues</h3>

            <%= f.simple_fields_for :issues do |issue_fields| %>
              <%= render 'issue_fields', f: issue_fields %>
            <%- end %>

            <p>
              <%= link_to_add_association 'Add Issue', f, :issues, class: 'btn btn-default' %>
            </p>

            <p>
              <%= select('case_file', 'people_id', @people.collect {|p| [p.name, p.id] }, class: 'select-people') %>
            </p>
            
            <%= f.submit 'Save', class: 'btn btn-primary' %>

          <% end %>
        </div>
      </div>

    </div>    
  </div>    
</div>
