<div class='page-header'>
  <div class='container'>
    <h1>
      <div class="col-sm-3"> Case Number </div>
      <div class="col-sm-3"> <%= @case.id%> </div>
    </h1>
  </div>
</div>

<div class='container'>
  <div class="col-sm-6">
    <table class='table table-responsive'>
      <thead><h2>Case Information</h2></thead>
      <tbody>
        <tr>
          <td>Case Type</td>
          <td><%= @case.case_type %></td>
        </tr>

        <tr>
          <td>Status</td>
          <td><%= @case.status %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to 'Edit Case', edit_case_path(@case) %>
  </div>
</div>

