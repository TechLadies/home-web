<div class='page-header'>
  <div class='container'>
    <h1>Cases</h1>
    <div class="row">
      <div class="col-md-6">
        <%= link_to 'New Case', new_case_path, class: 'btn btn-primary' %>
      </div>
      <div class="col-md-6">
        <div class="pull-right">
          <%= link_to 'Archive', archive_cases_path, class: 'btn btn-default' %>
        </div>
      </div>
      </div>
    </div>
  </div>

<div class='container'>

  <div class='panel panel-default'>

    <div class='panel-heading'>
      <h2>All Cases</h2>
    </div>

    <div class='panel-body'>

      <div>
            <table class='table table-responsive table-striped'>
              <thead>
                <tr>
                  <th>Case Number</th>
                  <th>Case Type</th>
                  <th>Assigned To</th>
                </tr>
              </thead>

              <tbody>
                <% @cases.where(status: "Pending").each do |c| %>
                  <tr>
                    <td><%= link_to c.id, case_path(c) %> </td>
                    <td><%= c.case_type %> </td>
                    <td><%= c.user.name %></td>
                    <td><%= link_to 'Edit', edit_case_path(c) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>


