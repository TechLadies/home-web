<div class='page-header'>
  <div class='container'>
    <h1>Edit Case Number <%= @case.id%></h1>
    <%= link_to 'Back to Case', case_path(@case), class: 'btn btn-default' %>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-xs-12'>
      <%= simple_form_for @case, url: case_path(@case) do |f| %>

        <%= f.input :case_type, label: 'Case Type', as: :radio_buttons, collection: CaseFile::TYPE%>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Related Issues</h3>
          </div>
          <div class="panel-body">

            <div class="table-responsive">
              <table class="table table-default">
                <thead>
                  <th></th>
                  <th>Description</th>
                  <th>Tagged To</th>
                  <th></th>
                </thead>
                <tbody>
                  <%= f.simple_fields_for :issues do |issue_fields| %>
                    <%= render 'issue_fields', f: issue_fields%>
                  <% end %>
                </tbody>
              </table>
            </div>

            <%= link_to_add_association 'Add Issue', f, :issues, :"data-association-insertion-node" => "tbody", :"data-association-insertion-method" => "after", class: 'btn btn-default' %>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Related People</h3>
          </div>
          <div class="panel-body">
            <%= select('case_file', 'person_id', @people.collect {|p| [p.name, p.id] }, {}, {class: 'select-people'}) %>
          </div>
        </div>
      
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>   