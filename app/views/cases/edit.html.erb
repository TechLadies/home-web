<div class='page-header'>
  <div class='container'>
    <h1>
      <div class="col-sm-3"> Edit Case </div>
      <div class="col-sm-3"> <%= @case.id%> </div>
    </h1>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-xs-3'>
      <%= simple_form_for @case, url: case_path(@case) do |f| %>

        <%= f.label :case_type, 'Case Type' %>
        <%= f.input :case_type, label: false, collection: CaseFile::TYPES %>
    </div>
  </div>
  
  <div class='row'>
    <div class='col-xs-8'>

        <%= f.simple_fields_for :issues do |issue_fields| %>
          <%= issue_fields.input :description %>
        <% end %>
       
        <p><%= f.submit 'Save', class: 'btn btn-primary' %></p>

      <% end %>
    </div>
  </div>
</div>   