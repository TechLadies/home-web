<%= simple_form_for [@case_file, @involvement], as: :involvement, url: case_involvements_path(@case_file), remote: true do |f| %>

  <%= f.input :case_id, as: :hidden %>
  <%= f.input :involvable_type, as: :hidden %>
  <%= f.input :role, as: :hidden %>
  
  <%= f.input :involvable_id, label_only: true do %>
    <%= f.select :involvable_id, [], { include_blank: true } %>
  <%- end %>

  <hr />

  <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>

<%- end %>

  <hr />

<% if @involvement.involvable_type == 'Person' %>
	<%= link_to 'Add New Person', new_person_path, class: 'btn btn-block btn-success', :target => "_blank" %>
<%- else %>
	<%= link_to 'Add New Organization', new_organization_path, class: 'btn btn-block btn-success', :target => "_blank" %>
<%- end %>