$('#modal .modal-title').html('Add <%= @involvement.involvable_type %> to Case');
$('#modal .modal-body').html("<%= j render(partial: 'new')%>");
$('#modal .modal-footer').hide();

$('#involvement_involvable_id').select2({
  ajax: {
    url: "<%= case_involvements_path(@case_file, t: @involvement.involvable_type) %>",
    dataType: 'json',
    delay: 250,
    cache: true
  },
  width: '100%'
});

$('#modal').modal('show');
