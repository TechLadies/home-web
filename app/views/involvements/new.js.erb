$('#modal .modal-title').html('Add <%= @form.involvement.involvable_type %> to Case');
$('#modal .modal-body').html("<%= j render(partial: 'new')%>");
$('#modal .modal-footer').hide();

$('#form_involvement_attributes_involvable_id').select2({
  ajax: {
    url: "<%= case_involvements_path(@case_file, t: @form.involvement.involvable_type, i: params[:agency] ? 'Agency' : nil) %>",
    dataType: 'json',
    delay: 250,
    cache: true
  },
  width: '100%'
});

$('#modal').modal('show');
